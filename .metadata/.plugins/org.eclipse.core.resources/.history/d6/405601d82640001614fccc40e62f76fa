#include <iostream>
#include <vector>
#include <pthread.h>
#include <unistd.h>

using namespace std;

void * th1Func(void * i)
{
	for(int co =0; co<5000; co++){
		cout<<(int *)++i<<endl;
		//usleep(100000);
	}
}

void * th2Func(void * i)
{
	for(int co =0; co<5000; co++){
		cout<<(int *)++i<<endl;
		//usleep(100000);
	}

}

int main() {

	int i = 0;
	pthread_t th1, th2;

	pthread_create(&th1, NULL, th1Func, (void *)i);
	pthread_create(&th2, NULL, th2Func, (void *)i);

	pthread_join(th1, NULL);
	pthread_join(th2, NULL);

	return 0;
}

