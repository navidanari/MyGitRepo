#include <iostream>
#include <vector>
#include <pthread.h>
#include <unistd.h>

using namespace std;


void * th2Func(void * input)
{
	int * local = (int *)input;
	local += 10;
	cout<<"function "<< *local;
}

int main() {
	int i = 0;
	pthread_t th2;

	pthread_create(&th2, NULL, th2Func, (void*)i);
	pthread_join(th2, NULL);

	cout<<"   "<<i;

	return 0;
}

