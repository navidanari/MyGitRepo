#include <iostream>
#include <vector>
#include <pthread.h>
#include <unistd.h>

using namespace std;

void * th1Func(void * input)
{
	int i = *(int*)input;
	for(int co =0; co<5000; co++){
		i++;
	}
	cout<<i<<endl;
}

void * th2Func(void * input)
{
	cout<<"here";
}

int main() {
	int i = 0;
	pthread_t th2;

	pthread_create(&th2, NULL, th2Func, (void*)i);

	//pthread_join(th2, NULL);
	while (true)
	{}
	cout<<"   "<<i;

	return 0;
}

