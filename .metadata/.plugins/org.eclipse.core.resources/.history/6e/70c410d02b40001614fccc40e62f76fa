using namespace std;

void * th1Func(void * i)
{
	int * in = (int*)i;
	for(int co =0; co<5000; co++){
		in++;
		//usleep(100000);
	}
	cout<<in<<endl;
}

void * th2Func(void * i)
{
	int * in = (int*)i;
	for(int co =0; co<5000; co++){
		in++;
		//usleep(100000);
	}
	cout<<in<<endl;
}

int main() {

	int i = 0;
/*
